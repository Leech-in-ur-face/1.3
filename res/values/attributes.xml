<resources>

    <!--Global attributes-->
    <attr name="beatSync" format="boolean"/>

    <declare-styleable name="IconButton">
        <attr name="iconSrc" format="reference"/>
        <attr name="indicatorPosition" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="top" value="1"/>
        </attr>
        <attr name="activated" format="boolean"/>
    </declare-styleable>

    <!--Views-->
    <declare-styleable name="TextButton">
        <attr name="beatSync"/>
        <attr name="buttonText" format="string"/>
        <attr name="buttonColor" format="color"/>
        <attr name="buttonRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="StripsEffectView">
        <attr name="beatSync"/>
        <attr name="stripWidth" format="dimension"/>
        <attr name="stripSpeed" format="float"/>
        <attr name="spawnTime" format="integer"/>
        <attr name="spawnLimit" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PanelLayout">
        <attr name="beatSync"/>
        <attr name="panelColor" format="color"/>
        <attr name="panelTitle" format="string"/>
        <attr name="panelRadius" format="dimension"/>
        <attr name="panelTitleHeight" format="dimension"/>
    </declare-styleable>

</resources>