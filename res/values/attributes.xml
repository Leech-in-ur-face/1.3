<resources>

    <attr name="syncToBeat" format="boolean" />

    <attr name="size" format="enum">
        <enum name="xxs" value="-2" />
        <enum name="xs" value="-1" />
        <enum name="s" value="0" />
        <enum name="m" value="1" />
        <enum name="l" value="2" />
        <enum name="xl" value="3" />
        <enum name="xxl" value="4" />
    </attr>

    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <declare-styleable name="RoundLayout">
        <attr name="radius" format="integer" />

        <attr name="type" format="enum">
            <enum name="linear" value="0" />
            <enum name="relative" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BadgeText">
        <attr name="icon" format="reference" />
        <attr name="size" />
    </declare-styleable>

    <declare-styleable name="ScoreNumberView">
        <attr name="text" format="string"/>
        <attr name="numberScale" format="float" />
    </declare-styleable>

    <declare-styleable name="StatisticLayout">
        <attr name="badgeText" format="string" />
        <attr name="badgeTextColor" format="color" />
    </declare-styleable>

    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <declare-styleable name="StripsEffectView">
        <attr name="syncToBeat" />
    </declare-styleable>

    <declare-styleable name="PlayerArrowView">
        <attr name="arrowWidth" format="integer"/>
    </declare-styleable>

    <!--+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

</resources>