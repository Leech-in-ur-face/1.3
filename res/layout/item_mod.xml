<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/S"
    android:paddingBottom="@dimen/S">

    <com.reco1l.view.RoundLayout
        android:id="@+id/mm_modBody"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mm_modItemHeight"
        android:gravity="center_vertical"
        android:background="@color/mm_modItem"
        app:type="linear"
        app:radius="12">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#1A000000"
            android:gravity="center"
            android:paddingHorizontal="@dimen/M">

            <com.reco1l.view.custom.ModBadgeView
                android:id="@+id/mm_modIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/XXS"
                android:text="AC" />

        </LinearLayout>

        <TextView
            android:id="@+id/mm_modName"
            style="@style/text"
            android:layout_marginLeft="@dimen/M"
            android:text="mod name" />

    </com.reco1l.view.RoundLayout>

</LinearLayout>