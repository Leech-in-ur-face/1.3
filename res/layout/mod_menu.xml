<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="@dimen/topLayer">

    <LinearLayout
        android:id="@+id/mm_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/topBarHeight"
        android:background="@color/backgroundDimmed"
        android:clickable="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mm_sectionContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/mod_menu_section_item" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/backgroundTertiary"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/topBarHeight"
                android:background="#1F000000"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/M">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.reco1l.view.ButtonView
                        android:id="@+id/mm_custom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonText="Customizations" />

                    <com.reco1l.view.ButtonView
                        android:id="@+id/mm_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/M"
                        app:buttonColor="#3D2C2C"
                        app:buttonText="Clear all mods" />

                </LinearLayout>

            </RelativeLayout>

            <com.factor.bouncy.BouncyRecyclerView
                android:id="@+id/mm_customRv"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/modMenuCustomizationHeight"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/mod_menu_custom_item" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>