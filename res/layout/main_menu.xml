<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="@dimen/top_layer">

    <View
        android:id="@+id/main_buttonsBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainMenuButtonHeight"
        android:layout_centerVertical="true"
        android:background="@color/backgroundTertiary" />

    <LinearLayout
        android:id="@+id/main_buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mainMenuButtonHeight"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/main_logo">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_solo"
            android:layout_width="@dimen/mainMenuButtonWidth"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/backgroundSecondary"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/XS"
                    android:src="@drawable/v32_solo" />

                <TextView
                    style="@style/text"
                    android:text="@string/main_menu_solo"
                    android:textColor="@color/textSecondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/main_explore"
            android:layout_width="@dimen/mainMenuButtonWidth"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/backgroundSecondary"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/XS"
                    android:src="@drawable/v32_explore" />

                <TextView
                    style="@style/text"
                    android:text="Explore"
                    android:textColor="@color/textSecondary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.reco1l.view.effects.CircularSpectrum
        android:id="@+id/main_spectrum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/M" />

    <com.reco1l.view.effects.ExpandEffect
        android:id="@+id/main_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.reco1l.view.custom.LogoView
        android:id="@+id/main_logo"
        android:layout_width="@dimen/mainMenuSmallLogoSize"
        android:layout_height="@dimen/mainMenuSmallLogoSize"
        android:layout_centerVertical="true" />

    <com.reco1l.view.effects.FlashEffect
        android:id="@+id/main_kiai"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.reco1l.view.BadgeTextView
        android:id="@+id/main_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/XS"
        android:text="version number" />

</RelativeLayout>