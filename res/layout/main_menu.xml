<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="@dimen/top_layer">

    <LinearLayout
        android:id="@+id/main_buttonsBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/backgroundTertiary"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/main_buttonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.reco1l.ui.elements.MenuButtonVIew
                android:id="@+id/main_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v32_play"
                android:text="@string/main_menu_play" />

            <com.reco1l.ui.elements.MenuButtonVIew
                android:id="@+id/main_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v32_explore"
                android:text="Chimu" />

        </LinearLayout>

    </LinearLayout>

    <com.reco1l.view.effects.CircularSpectrum
        android:id="@+id/main_spectrum"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/M" />

    <com.reco1l.view.effects.ExpandEffect
        android:id="@+id/main_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.reco1l.ui.elements.LogoView
        android:id="@+id/main_logo"
        android:layout_width="@dimen/mainMenuSmallLogoSize"
        android:layout_height="@dimen/mainMenuSmallLogoSize"
        android:layout_centerVertical="true" />

    <com.reco1l.view.effects.FlashEffect
        android:id="@+id/main_kiai"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.reco1l.view.BadgeTextView
        android:id="@+id/main_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/XS"
        android:text="version number" />

</RelativeLayout>