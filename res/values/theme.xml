<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="Theme.Material3.Dark">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <!--Styles-->
        <item name="android:textViewStyle">@style/text</item>
        <item name="android:seekBarStyle">@style/seek_bar</item>
        <item name="android:checkboxStyle">@style/check_box</item>

        <!--Preference Styles-->
        <item name="seekBarPreferenceStyle">@style/seek_bar_preference</item>
        <item name="preferenceCategoryStyle">@style/category_preference</item>
        <item name="checkBoxPreferenceStyle">@style/check_box_preference</item>
        <item name="editTextPreferenceStyle">@style/preference</item>
        <item name="preferenceStyle">@style/preference</item>
        <item name="dialogPreferenceStyle">@style/preference</item>

        <!--Custom views styles-->
        <item name="badgeTextStyle">@style/badgeText</item>
    </style>

    <style name="AppTheme" parent="MainTheme" />
</resources>