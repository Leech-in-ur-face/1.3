<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="#FFF">

    <com.reco1l.view.RoundLayout
        android:id="@+id/bl_itemBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/XS"
        android:layout_marginLeft="@dimen/XL"
        android:layout_marginRight="@dimen/_M"
        android:background="@color/backgroundSecondary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/beatmapListItemHeight">

            <ImageView
                android:id="@+id/bl_songBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.40"
                android:background="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/M"
                android:layout_marginRight="@dimen/XXL"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bl_title"
                    style="@style/text"
                    android:layout_marginBottom="@dimen/XXS"
                    android:singleLine="true"
                    android:text="title"
                    android:textSize="@dimen/textM"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bl_artist"
                        style="@style/text"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/bl_mapper"
                        android:singleLine="true"
                        android:text="by artist"
                        android:textColor="@color/textSecondary" />

                    <TextView
                        android:id="@+id/bl_mapper"
                        style="@style/propertyBadge"
                        android:layout_alignParentRight="true"
                        android:drawableStart="@drawable/v10_person"
                        android:text="mapper" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </com.reco1l.view.RoundLayout>

    <com.reco1l.ui.scenes.selector.views.CarrouselRecyclerView
        android:id="@+id/bl_trackList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        tools:itemCount="8"
        tools:listitem="@layout/item_beatmap_child" />

</LinearLayout>
