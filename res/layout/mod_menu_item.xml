<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/modMenuModItemHeight"
    android:layout_marginHorizontal="@dimen/S"
    android:layout_marginBottom="@dimen/S"
    app:cardBackgroundColor="@color/backgroundSecondary"
    app:cardCornerRadius="@dimen/globalCorners">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#1A000000"
            android:gravity="center"
            android:paddingHorizontal="@dimen/M">

            <ImageView
                android:id="@+id/mm_modIcon"
                android:layout_width="@dimen/modMenuModSpriteSize"
                android:layout_height="@dimen/modMenuModSpriteSize"
                android:layout_marginHorizontal="@dimen/XXS"
                android:src="@drawable/placeholder_mod" />

        </LinearLayout>

        <TextView
            android:id="@+id/mm_modName"
            style="@style/text"
            android:layout_marginLeft="@dimen/M"
            android:text="mod name" />

    </LinearLayout>

</androidx.cardview.widget.CardView>