<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="pref_graphics">

    <PreferenceCategory
        android:title="Graphics"
        android:layout="@layout/custom_preference_category_big"
        app:iconSpaceReserved="false"/>

    <PreferenceCategory
        android:title="Background"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/bg_quality_names"
            android:entryValues="@array/bg_quality_values"
            android:key="background"
            android:title="@string/opt_bg_title"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Effects"
        app:iconSpaceReserved="false">

        <com.reco1l.preference.CheckPreference
            android:defaultValue="true"
            android:key="bursts"
            android:title="@string/opt_bursts_title" />

        <com.reco1l.preference.CheckPreference
            android:defaultValue="true"
            android:key="hitlighting"
            android:title="@string/opt_hitlighting_title" />

        <com.reco1l.preference.CheckPreference
            android:defaultValue="true"
            android:key="dither"
            android:title="@string/opt_dither_title" />

    </PreferenceCategory>

</PreferenceScreen>