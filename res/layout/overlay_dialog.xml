<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:translationZ="@dimen/top_layer">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundDimmed"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/d_body"
        android:layout_width="@dimen/dialogWidth"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/backgroundPrimary"
        android:gravity="center">

        <com.factor.bouncy.BouncyNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="@dimen/M">

                <LinearLayout
                    android:id="@+id/d_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/d_title"
                        style="@style/text"
                        android:layout_margin="@dimen/S"
                        android:text="title"
                        android:textSize="@dimen/textXL"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/d_message"
                        style="@style/text"
                        android:layout_margin="@dimen/S"
                        android:text="message"
                        android:autoLink="all"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/d_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

        </com.factor.bouncy.BouncyNestedScrollView>

    </LinearLayout>

</RelativeLayout>