<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:key="pref_general">

    <PreferenceCategory
        android:title="General"
        android:layout="@layout/custom_preference_category_big"
        app:iconSpaceReserved="false"/>

    <PreferenceCategory
        android:title="@string/game_name"
        app:iconSpaceReserved="false">

        <com.reco1l.preference.CheckPreference
            android:defaultValue="false"
            android:key="general_offline_mode"
            android:title="Offline mode" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="receiveAnnouncements"
            android:summary="@string/opt_receive_announcements_summary"
            android:title="@string/opt_receive_announcements_title"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

</PreferenceScreen>