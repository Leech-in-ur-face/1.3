<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundDimmed"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/pm_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/backgroundTertiary"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.reco1l.ui.elements.MenuButtonVIew
                android:id="@+id/pm_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v32_play"
                android:text="Resume" />

            <com.reco1l.ui.elements.MenuButtonVIew
                android:id="@+id/pm_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v32_retry"
                android:text="Retry" />

            <com.reco1l.ui.elements.MenuButtonVIew
                android:id="@+id/pm_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/v32_exit"
                android:text="Exit" />

        </LinearLayout>

    </LinearLayout>

    <com.reco1l.view.ButtonView
        android:id="@+id/pm_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/M"
        android:text="Save failed replay" />

</RelativeLayout>