<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:layout="@layout/custom_preference_category_big"
        android:title="Advanced" />

    <PreferenceCategory
        android:title="Location"
        app:iconSpaceReserved="false">

        <com.reco1l.preference.GameEditTextPreference
            android:key="corePath"
            android:title="@string/opt_corepath_title" />

        <com.reco1l.preference.GameEditTextPreference
            android:key="skinTopPath"
            android:title="@string/opt_skin_top_path_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Synchronization"
        app:iconSpaceReserved="false">

        <com.reco1l.preference.GameCheckBoxPreference
            android:defaultValue="true"
            android:key="lowDelay"
            android:title="@string/opt_lowdelay_title" />

        <com.reco1l.preference.GameCheckBoxPreference
            android:defaultValue="true"
            android:key="fixFrameOffset"
            android:title="@string/opt_fix_frame_offset_title" />

        <com.reco1l.preference.GameCheckBoxPreference
            android:defaultValue="true"
            android:key="syncMusic"
            android:title="@string/opt_syncmusic_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Experimental"
        app:iconSpaceReserved="false">

        <com.reco1l.preference.GameCheckBoxPreference
            android:defaultValue="false"
            android:key="removeSliderLock"
            android:title="@string/opt_remove_sliderlock_spinnerlock_title" />

        <com.reco1l.preference.GameCheckBoxPreference
            android:defaultValue="false"
            android:key="calculateSliderPathInGameStart"
            android:title="@string/opt_calculate_slider_path_in_game_start_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Debug"
        app:iconSpaceReserved="false">

        <com.reco1l.preference.GameCheckBoxPreference
            android:defaultValue="true"
            android:key="displayScoreStatistics"
            android:title="@string/opt_display_score_statistics_title" />

        <com.reco1l.preference.GameCheckBoxPreference
            android:defaultValue="true"
            android:key="fps"
            android:title="@string/opt_fps_title" />

    </PreferenceCategory>

</PreferenceScreen>
